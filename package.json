{
  "name": "school_web_monetization_backend",
  "version": "0.0.1",
  "description": "The backend service for an education platform",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text --reporter=text-summary cross-env THE_SCHOOL_HUB_NODE_ENV=test mocha -c -r esm test/**/*.test.js --timeout 12000 --exit",
    "pretest": "npm run lint && cross-env THE_SCHOOL_HUB_NODE_ENV=test npm run migrate:reset && cross-env THE_SCHOOL_HUB_NODE_ENV=test npm run migrate:up",
    "prestart": "cross-env THE_SCHOOL_HUB_NODE_ENV=production npm run migrate:up",
    "start": "cross-env THE_SCHOOL_HUB_NODE_ENV=production node -r esm .",
    "dev": "nodemon -r esm .",
    "migrate": "db-migrate --migrations-dir ./app/db/migrations",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:create": "npm run migrate create",
    "lint": "eslint --ext .js ./"
  },
  "keywords": [
    "web-monetization",
    "coil",
    "education"
  ],
  "author": "PeculiarE",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^4.3.8",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.6",
    "app-root-path": "^3.0.0",
    "aws-sdk": "^2.956.0",
    "axios": "^0.21.3",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "bull": "^3.22.11",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.6",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "ioredis": "^4.27.7",
    "joi": "^17.4.1",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.23",
    "nock": "^13.1.3",
    "pg-monitor": "^1.4.1",
    "pg-promise": "^10.10.2",
    "reading-time": "^1.3.0",
    "sharp": "^0.29.1",
    "slugify": "^1.6.0",
    "stopword": "^1.0.11",
    "winston": "^3.3.3"
  }
}
